@model SistemaCursoOnline.Models.Turma

@{
    ViewBag.Title = "Detalhes da Turma";
}

<h2><strong>Detalhes da Turma</strong></h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DescricaoTurma)
        </dt>

        <dd>
            @Html.EditorFor(model => model.DescricaoTurma, new { htmlAttributes = new { @class="form-control", style = "width:300px;", disabled = "true" } })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.QtdeAlunos)
        </dt>

        <dd>
            @Html.EditorFor(model => model.QtdeAlunos, new { htmlAttributes = new { @class = "form-control", style = "width:300px;", disabled = "true" } })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Turno)
        </dt>

        <dd>
            @Html.EditorFor(model => model.Turno, new { htmlAttributes = new { @class = "form-control", style="width:300px;", disabled = "true" } })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>

        <dd>
            @Html.EditorFor(model => model.Ativo, new { htmlAttributes = new { disabled="true" } })
